<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:screens="clr-namespace:StarBreaker.Screens"
             xmlns:AvaloniaEdit="clr-namespace:AvaloniaEdit;assembly=AvaloniaEdit"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:DataType="screens:DiffPreviewViewModel"
             x:Class="StarBreaker.Screens.DiffPreviewView">
    
    <Grid RowDefinitions="Auto,*">
        <!-- Header with labels -->
        <Grid Grid.Row="0" ColumnDefinitions="*,4,*" Margin="5">
            <Border Grid.Column="0" 
                    Background="{DynamicResource SystemControlBackgroundAltMediumBrush}"
                    CornerRadius="4" 
                    Padding="8,4">
                <TextBlock Text="{Binding OldLabel}" 
                           FontWeight="SemiBold" 
                           HorizontalAlignment="Center"
                           Foreground="Red"/>
            </Border>
            
            <Border Grid.Column="2" 
                    Background="{DynamicResource SystemControlBackgroundAltMediumBrush}"
                    CornerRadius="4" 
                    Padding="8,4">
                <TextBlock Text="{Binding NewLabel}" 
                           FontWeight="SemiBold" 
                           HorizontalAlignment="Center"
                           Foreground="Green"/>
            </Border>
        </Grid>
        
        <!-- Side-by-side editors -->
        <Grid Grid.Row="1" ColumnDefinitions="*,4,*">
            <!-- Old version editor -->
            <Border Grid.Column="0" 
                    BorderBrush="{DynamicResource SystemControlForegroundBaseMediumBrush}" 
                    BorderThickness="1" 
                    CornerRadius="4">
                <AvaloniaEdit:TextEditor
                    Name="OldEditor"
                    IsReadOnly="True"
                    FontFamily="Consolas"
                    ShowLineNumbers="True"
                    WordWrap="False"
                    VerticalScrollBarVisibility="Auto"
                    HorizontalScrollBarVisibility="Auto"
                    Background="{DynamicResource SystemControlBackgroundAltHighBrush}" />
            </Border>
            
            <!-- Splitter -->
            <GridSplitter Grid.Column="1" ResizeDirection="Columns" />
            
            <!-- New version editor -->
            <Border Grid.Column="2" 
                    BorderBrush="{DynamicResource SystemControlForegroundBaseMediumBrush}" 
                    BorderThickness="1" 
                    CornerRadius="4">
                <AvaloniaEdit:TextEditor
                    Name="NewEditor"
                    IsReadOnly="True"
                    FontFamily="Consolas"
                    ShowLineNumbers="True"
                    WordWrap="False"
                    VerticalScrollBarVisibility="Auto"
                    HorizontalScrollBarVisibility="Auto"
                    Background="{DynamicResource SystemControlBackgroundAltHighBrush}" />
            </Border>
        </Grid>
    </Grid>
</UserControl> 